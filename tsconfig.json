{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true, // üëàÔ∏è must be enabled
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "target": "es5",
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "src",
    "types": ["reflect-metadata", "jest", "node"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "test",
    "public/js/**/*js",
    "gulpfile.js",
    "dist",
    "**/*spec.ts",
    "scripts",
    "babel.config.js",
    "jest.config.js",
    "coverage"
  ]
}
